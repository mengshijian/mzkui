              cc="guohuaxin@cootf.com"
              smtpHost="smtp.mxhichina.com"
              smtpPort="25"
              smtpUsername="yuanyuefeng@cootf.com"
              smtpPassword="yyfctf!@#456"
              bufferSize="50">
        </SMTP>-->
    </appenders>
    <loggers>
        <root level="trace">
            <!--
            <appender-ref ref="Console"/>
            -->
            <appender-ref ref="File"/>
            <!--
            <appender-ref ref="Mail" />
            -->
        </root>
    </loggers>
</configureation>
